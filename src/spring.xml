<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="triangle" class="Triangle">
        <!--for method injection-->
        <!--<property name="type" value="Equilateral"/>-->

        <!--for constructor injection-->
        <constructor-arg value="2" index="0"/>

        <constructor-arg value="Equilateral" index="1" />

        <property name="pointA" ref="pointZero"></property>
        <property name="pointB" ref="pointA"></property>
        <property name="pointC" ref="pointB"></property>


    </bean>

    <bean id="pointZero" class="Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>

    <bean id="pointA" class="Point">
        <property name="x" value="0"></property>
        <property name="y" value="20"></property>
    </bean>

    <bean id="pointB" class="Point">
        <property name="x" value="-20"></property>
        <property name="y" value="0"></property>
    </bean>

</beans>